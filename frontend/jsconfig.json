{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "checkJs": true,
    "strict": false,
    "module": "commonjs",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,

    "paths": {
      "@Components": ["src/components/"],
      "@Models": ["src/models/"],
      "@Routes": ["src/routes/"],
      "@Assets": ["src/assets/"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
